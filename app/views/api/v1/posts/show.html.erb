<h1><%= @post.title %></h1>
<p><%= @post.content%></p>

<% if @post.image.attached? %>
<%= image_tag @post.image %>
<% else %>
<p>画像はありません</p>
<% end %>

<%= link_to '編集', edit_api_v1_post_path(@post) %>
<%= link_to '消去', api_v1_post_path(@post), method: :delete, data:{confirm: '本当に消去しますか？'}%>
<%= link_to '一覧に戻る', api_v1_posts_path %>
